@model EditCustomerViewModel
@{
    ViewData["Title"] = "Edit Customer";
}

<h2>Edit Customer</h2>

<form asp-controller="Customer" asp-action="Edit" method="post">
    <div class="container">
        <div class="form-group">
            <label asp-for="FirstName" class="form-check-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-check-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telephone" class="form-check-label">Telephone</label>
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sex" class="form-check-label">Sex</label>
            <select class="form-control" asp-for="Sex" asp-items="Html.GetEnumSelectList<Gender>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-controller="Customer" asp-action="Index">Back</a>
</form>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}