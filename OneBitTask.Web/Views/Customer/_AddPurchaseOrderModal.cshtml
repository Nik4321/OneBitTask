@model AddPurchaseOrderViewModel

<div class="modal fade" id="add-purchase-order-modal" tabindex="-1" role="dialog" aria-labelledby="add-purchase-order-modal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Purchase Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="PurchaseOrder" asp-action="Create" method="post">
                @Html.HiddenFor(x => x.CustomerId)

                <div class="modal-body">
                    <div class="container">
                        <div class="form-group">
                            <label asp-for="Description" class="form-check-label">Description</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="form-check-label">Price</label>
                            <input asp-for="Price" id="purchase-order-price-input" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quantity" class="form-check-label">Quantity</label>
                            <input asp-for="Quantity" id="purchase-order-quantity-input" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-check-label">Total Amount</label>
                            <input id="purchase-order-total-amount-input" value="0" disabled="disabled" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>